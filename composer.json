{
    "name": "tu-proyecto/codeigniter",
    "description": "CodeIgniter 4 Application",
    "type": "project",
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.4",
        "dompdf/dompdf": "^3.0",
        "phpoffice/phpspreadsheet": "^5.0",
        "myth/auth": "^1.0",
        "tecnickcom/tcpdf": "^6.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "scripts": {
        "post-update-cmd": [
            "php spark optimize"
        ],
        "test": "phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
